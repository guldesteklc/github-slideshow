using System;

namespace ConsoleApp47
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Sayıları Giriniz: ");
            int n = Convert.ToInt32(Console.ReadLine());
            int toplam = 0;
            for (int i = 1; i <= n; i++)
            {
                toplam += i;
            }
            Console.WriteLine("1'den n Sayısına Kadar Olan Sayıların Toplamı=" + toplam);
            Console.ReadLine();
        }
    }
}
