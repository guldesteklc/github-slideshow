using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp27
{
    class Program
    {
        static void Main(string[] args)
        {
            int sayi;
            Console.Write("Faktoryeli alınacak sayıyı girin.");
            sayi = Convert.ToInt16(Console.ReadLine());
            int faktoryel = 1;

            while (sayi > 1) 
            {
                faktoryel = faktoryel * sayi;
                sayi--;
            }
            Console.Write(faktoryel);
            Console.Read();


        }
    }
}
/* 5*1=5
   5*4=20
   20*3=60
   60*2=120
 */
